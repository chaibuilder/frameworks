{
  "name": "chai-next",
  "version": "0.0.1-beta.1",
  "description": "Chai Builder NextJS Package",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsup  --watch --format esm,cjs",
    "build": "tsup  --dts --format esm,cjs"
  },
  "keywords": [],
  "author": "Suraj Air",
  "email": "suraj@chaibuilder.com",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "peerDependencies": {
    "@chaibuilder/pages": "0.8.5",
    "@chaibuilder/sdk": "2.3.7",
    "next": "^15.4.2",
    "react": "^19",
    "react-dom": "^19"
  },
  "exports": {
    ".": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./styles": {
      "import": "./dist/client/index.css",
      "require": "./dist/client/index.css"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.30",
    "tsup": "^8.0.1",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "tailwindcss-animate": "^1.0.7"
  }
}
